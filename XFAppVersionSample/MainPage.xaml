<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFAppVersionSample.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Version Tracking Sample" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="current" Text="" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="previous" Text="" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="isNew" Text="" FontSize="Title" Padding="30,10,30,10"/>
    </StackLayout>

</ContentPage>
